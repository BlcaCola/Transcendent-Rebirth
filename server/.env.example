# 应用配置
APP_NAME="超凡新生后端服务"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY="your-secret-key-change-this-in-production-min-32-chars"

# 服务器配置
HOST=0.0.0.0
PORT=12345

# 数据库配置 (选择一个)
# SQLite (开发环境)
DATABASE_URL=sqlite://./TranscendentRebirth.db

# PostgreSQL (生产环境推荐)
# DATABASE_URL=postgres://username:password@localhost:5432/TranscendentRebirth

# MySQL (可选)
# DATABASE_URL=mysql://username:password@localhost:3306/TranscendentRebirth

# JWT 配置
JWT_SECRET_KEY="your-jwt-secret-key-change-this-in-production"
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30天

# 管理员配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com

# CORS 配置
CORS_ORIGINS=["http://localhost:8080","http://localhost:3000","https://www.ddct.top","https://ddct.top"]

# Turnstile 人机验证 (Cloudflare)
TURNSTILE_ENABLED=false
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
TURNSTILE_SITE_KEY=your-turnstile-site-key

# 邮箱验证配置
EMAIL_VERIFICATION_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=超凡新生

# Redis 配置 (可选，用于缓存和会话)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # 秒

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
